<h2>Following Users</h2>
<% if @users.exists? %>
  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Follows</th>
      <th>Followers</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</table>