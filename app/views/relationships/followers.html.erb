<div class="container">
<h2>Follower Users</h2>
<% if @users.exists? %>
  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Profile image</th>
      <th>Follows</th>
      <th>Followers</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</table>
</div>